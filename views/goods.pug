
include header
include site_header
div(class='wrap')
	div(class='content')
		header(class='site-header')

		div(class='container')
			div(class='row')
				div(class='col col-md-12')
					h2(class='panel-title') #{goods[0]['name']}

				div(class='col col-md-4')
					img(
						src='images/'+goods[0]['image']
						class='goods-big-image'
					)

				div(class='col col-md-8')
					h3 Description
					p #{goods[0]['description']}
					p(class='success') Price: #{goods[0]['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} uah
					button(
						class='button-success add-to-cart'
						data-goods_id=goods[0]['id']
					) to card
	include nav
include footer	



